set theme midnight

bind K tabnext
bind J tabprev

bind j scrollline 1
bind k scrollline -1

set editorcmd /opt/homebrew/bin/wezterm start -- /opt/homebrew/bin/nvim

 bind / fillcmdline find
 bind ? fillcmdline find --reverse
 bind n findnext --search-from-view
 bind N findnext --search-from-view --reverse
 bind gn findselect
 bind gN composite findnext --search-from-view --reverse; findselect
 bind <Esc> nohlsearch
