#!/bin/bash

dirs=`zoxide query --list | grep "Code\|.config"`

default_session_name="default"

tmux_sessions=`tmux list-sessions -F "#S"`

selected=`echo -e "$default_session_name\n$tmux_sessions\n$dirs" | fzf-tmux -w 60% -h 50%`
if [ -z "$selected" ]; then
    exit 0
fi

if [ "$selected" == "$default_session_name" ]; then
    selected="~"
    session_name=$default_session_name
else
    session_name=`echo "$selected" | rev | cut -d "/" -f 1 | rev`
    session_name=`echo "$session_name" | tr -d "."`  # trim dots
fi

if ! pgrep -x "tmux" > /dev/null; then
    tmux new -s "$session_name" -c "$selected"
else
    # If it is a directory.
    if [ "${selected:0:1}" == "/" ]; then
        if [ -n "$TMUX" ]
        then
            tmux new -ds "$session_name" -c "$selected"
            tmux switch-client -t "$session_name"
        else
            tmux new -s "$session_name" -c "$selected"
        fi
    else
        if [ -n "$TMUX" ]; then
            tmux switch-client -t "$session_name"
        else
            tmux attach -t "$session_name"
        fi
    fi
fi
