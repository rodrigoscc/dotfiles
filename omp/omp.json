{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "black": "#262B44",
    "blue": "#4B95E9",
    "green": "#59C9A5",
    "grey": "#8a8a8a",
    "orange": "#F07623",
    "red": "#D81E5B",
    "white": "#E0DEF4",
    "yellow": "#F3AE35"
  },
  "secondary_prompt": {
    "template": "❯❯ ",
    "foreground": "magenta",
    "background": "transparent"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none",
            "edge_format": "<white>%s</>",
            "folder_separator_template": "<magenta>/</>",
            "style": "agnoster_full"
          },
          "template": "{{ .Path }}",
          "foreground": "magenta",
          "background": "transparent",
          "type": "path",
          "style": "plain"
        },
        {
          "properties": {
            "branch_icon": "",
            "branch_max_length": 25,
            "cache_duration": "none",
            "fetch_status": true,
            "fetch_upstream_icon": false
          },
          "template": " <p:grey>on</> {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}</><magenta>{{ if .LatestTag }} <p:grey>ltag</> {{ .LatestTag }}{{ end }}</>",
          "foreground": "magenta",
          "background": "transparent",
          "type": "git",
          "style": "plain",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}yellow{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}red{{ end }}",
            "{{ if gt .Ahead 0 }}green{{ end }}"
          ]
        },
        {
          "properties": {
            "always_enabled": false,
            "cache_duration": "none"
          },
          "template": "  {{ .String }}",
          "foreground": "red",
          "background": "transparent",
          "type": "status",
          "style": "plain"
        }
      ]
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "  {{ .Full }}",
          "foreground": "green",
          "background": "transparent",
          "type": "node",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none",
            "parse_mod_file": true
          },
          "template": "  {{ .Full }}",
          "foreground": "blue",
          "background": "transparent",
          "type": "go",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "  {{ .Full }}{{ if .Venv }} ({{ .Venv }}){{end}}",
          "foreground": "yellow",
          "background": "transparent",
          "type": "python",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " took <red>{{ .FormattedMs }}</>",
          "type": "executiontime",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " at <blue><b>{{ .CurrentDate | date \"15:04:05\" }}</b></>",
          "foreground": "white",
          "background": "transparent",
          "type": "time",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "#ffffff",
          "template": "{{ if .SSHSession }} {{.HostName}} {{ end }} "
        },
        {
          "template": " ❯",
          "foreground": "magenta",
          "background": "transparent",
          "type": "text",
          "style": "plain"
        }
      ]
    }
  ],
  "tooltips": [
    {
      "properties": {
        "display_default": true
      },
      "leading_diamond": "",
      "trailing_diamond": "",
      "template": "  {{ .Profile }}{{ if .Region }}@{{ .Region }}{{ end }} ",
      "foreground": "white",
      "background": "p:orange",
      "type": "aws",
      "style": "plain",
      "tips": [
        "aws"
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
